<!-- When these get clicked we should probably take the user somewhere they can see info about the game -->
<div class="w-full z-1 h-64 group text-black
        bg-gray-200 rounded-xl transition-all cursor-pointer relative border 
        border-gray-300 overflow-hidden mx-2
        flex">

    <!-- Left -->
    <div class="p-6 w-1/2">
        <h3 class="font-title text-6xl sm:text-4xl font-extrabold py-2">{{gameName}}</h3>
        <p class="font-subtitle text-lg font-bold py-2 pb-4 italic">Released 21 July 2017</p>
        <p class="">{{> @partial-block }}</p>
    </div>

    <!-- Right -->
    <div class="m-0 w-1/2 bg-cover bg-center transition-all transform" style="background-image: url('{{gameThumb}}');">
    </div>
</div>