<!-- When these get clicked we should probably take the user somewhere they can see info about the game -->
<div class="w-full z-1 lg:h-64 group
        bg-gray-800 rounded relative border
        border-gray-700 overflow-hidden
        grow flex flex-col lg:flex-row">

    <!-- Left -->
    <div class="p-6 w-full lg:w-1/2">
        <h3 class="font-title text-2xl sm:text-4xl font-extrabold">{{ gameName }}</h3>
        <p class="font-subtitle font-bold py-1 lg:py-4 uppercase italic">{{ releaseDate }}</p>
        <p class="">{{> @partial-block }}</p>

        <ul class="list-none flex space-x-2 py-2">
            {{#if github }}
            <li>
                <a href="{{ github }}" title="GitHub">
                    <i class="cursor-pointer hover:text-blue-500 transition-all fab fa-github"></i>
                </a>
            </li>
            {{/if}}

            {{#if sbox }}

            <li>
                <a href="{{ sbox }}" title="Website">
                    <i class="cursor-pointer hover:text-blue-500 transition-all fas fa-box"></i>
                </a>
            </li>
            {{/if}}
        </ul>
    </div>

    <!-- Right -->
    <div class="m-0 w-full h-48 lg:h-auto lg:w-1/2 bg-cover bg-center transition-all transform"
        style="background-image: url('{{gameThumb}}');">
    </div>
</div>